@model  List<SamplePuzzle>

<h4>Hazır Çözülebilir Durumlar</h4>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>Başlangıç</th>
        <th>Hedef</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@(i + 1)</td>
            <td>@Model[i].Start</td>
            <td>@Model[i].Goal</td>
            <td>
                <button type="button" class="btn btn-sm btn-outline-primary"
                        onclick="fillPuzzle('@Model[i].Start', '@Model[i].Goal')">
                    Uygula
                </button>
            </td>
        </tr>
    }
    </tbody>
</table>

<script>
    function fillPuzzle(start, goal) {
        document.querySelector('input[name="Start"]').value = start;
        document.querySelector('input[name="Goal"]').value = goal;
    }
</script>


